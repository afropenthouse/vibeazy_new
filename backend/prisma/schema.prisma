generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  passwordHash  String
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  savedDeals    SavedDeal[]
  resetTokens   PasswordResetToken[]
  verificationTokens EmailVerificationToken[]
  submissions   UserDealSubmission[]
}

model SavedDeal {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  dealId    Int
  dealTitle String?
  dealData  Json?
  createdAt DateTime  @default(now())

  @@unique([userId, dealId])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  token     String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  used      Boolean   @default(false)
  createdAt DateTime  @default(now())
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Category list managed by admin, referenced by name in Deal.category
model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}

// Admin-managed deals stored in our database
model Deal {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  merchantName   String
  city           String
  category       String?
  tags           String[]
  imageUrl       String
  oldPrice       Decimal?  @db.Decimal(10,2)
  newPrice       Decimal?  @db.Decimal(10,2)
  discountPct    Int?
  expiresAt      DateTime?
  isActive       Boolean   @default(true)
  deepLink       String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([isActive, expiresAt])
  @@index([city])
  @@index([category])
}

// User-submitted deals pending admin verification
model UserDealSubmission {
  id           Int       @id @default(autoincrement())
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int
  title        String
  description  String?
  merchantName String
  city         String
  category     String?
  tags         String[]
  imageUrl     String
  oldPrice     Decimal?  @db.Decimal(10,2)
  newPrice     Decimal?  @db.Decimal(10,2)
  discountPct  Int?
  expiresAt    DateTime?
  deepLink     String?
  status       String    @default("pending") // pending | approved | rejected
  dealId       Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([status])
  @@index([userId])
}